<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.ruedigergad.qtodo</id>
    <name>Q To-Do</name>
    <versionNumber>0.11.5</versionNumber>
    <description>foo</description>
    <initialWindow>
        <aspectRatio>portrait</aspectRatio>
        <autoOrients>false</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>Ruediger Gad</author>
    <copyright>COPYRIGHT</copyright>
    <env value="app/native/imports:/usr/lib/qt4/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/plugins:/usr/lib/qt4/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib:/usr/lib/qt4/lib/" var="LD_LIBRARY_PATH"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>
    <action>access_shared</action>
    <!-- qtodo should point to the project binary, path can be relative -->
    <asset path="qtodo" type="Qnx/Elf" entry="true">qtodo</asset>
    <asset path="%SRC_DIR%/qml/common">assets</asset>
    <asset path="%SRC_DIR%/qml/bb10">assets</asset>
</qnx>
